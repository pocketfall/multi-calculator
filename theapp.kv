<InterfaceContainer>:
  MainLayout:

<MainLayout>:
  orientation: "vertical"
  Label:
    id: display_label
    size_hint: [1, .33]
    text: root.label_text
    font_size: app.label_text_size
  ButtonGrid:
    callback: root.add_to_display
    label_text: root.label_text
    id: button_grid
    size_hint: [1, .66]

<ButtonGrid>:
  cols: 4
